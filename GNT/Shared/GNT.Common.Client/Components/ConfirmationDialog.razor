@using GNT.Shared.Translate

@using MudBlazor

@inject TranslateService t;

<MudDialog>
    <DialogContent>
        @ContentText
    </DialogContent>
    <DialogActions>
        <MudButton Size="Size.Small" OnClick="Cancel">@t[General.Cancel]</MudButton>
        <MudButton Size="Size.Small" Color="Color.Primary" OnClick="Submit">@t[General.Confirm]</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }

    [Parameter] public string ContentText { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}